<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= form_for :enrollment, url: "/enrollments/search" do |f| %>

    <p>
      <%= f.label :course %><br>
      <%= f.text_field :course %>
    </p>

    <p>
      <%= f.label :subject %><br>
      <%= f.collection_select :subject_id, Subject.all, :subject_id, :name %>
    </p>

    <p>
      <%= f.submit :Search %>
    </p>
  <% end %>

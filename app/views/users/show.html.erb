<h1>Profile Page</h1>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Enrolled in:</strong>
</p>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Requirements</th>
  </tr>

  <% @enrolledCourses.each do |course| %>
    <tr>
      <td><%= course.code %></td>
      <td><%= course.name %></td>
      <td><%= course.description %></td>
      <td><%= course.requirements %></td>
      <td>
        <% flash.each do |key, value| %> <div class="flash <%= key %>"><%= value %></div> <% end %>
        <%= button_to 'Unenroll', {:controller => "enrollments", :action => "destroy", :course_id => course.id,  :user_id=> session[:user_id]} , :method=>:delete %>
      </td>
    </tr>
  <% end %>
</table>

<style type="text/css">
td
{
    padding:0 0px 0 15px;
}
</style>
